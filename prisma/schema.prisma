generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  uid       String   @unique
  email     String   @unique
  name      String?
  photoURL  String?
  role      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
